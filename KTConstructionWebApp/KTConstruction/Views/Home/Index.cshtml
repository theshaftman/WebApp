<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="5000">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <div class="header-image-holder">
                <img src="~/Images/Construction/Екстериорни ремонти/IMG_20170724_150436.jpg" style="top:0px;" alt="Image">
            </div>
            <div class="carousel-caption">
                <div class="pull-left">
                    <h3>Екстериорни Ремонти</h3>
                    <a class="btn btn-block btn-default" href="/Testimonials#?exteriorRepair" target="_self">Вижте още</a>
                </div>
            </div>
        </div>
        <div class="item">
            <div class="header-image-holder">
                <img src="~/Images/Construction/Интериорни ремонти/IMG_20170707_151039.jpg" style="top:-300px;" alt="Image">
            </div>
            <div class="carousel-caption">
                <div class="pull-left">
                    <h3>Интериорни Ремонти</h3>
                    <a class="btn btn-block btn-default" href="/Testimonials#?interiorRepair" target="_self">Вижте още</a>
                </div>
            </div>
        </div>
        <div class="item">
            <div class="header-image-holder">
                <img src="~/Images/Construction/Ремонт на Баня/IMG_20170707_150939.jpg" style="top:-300px;" alt="Image">
            </div>
            <div class="carousel-caption">
                <div class="pull-left">
                    <h3>Ремонти на Баня</h3>
                    <a class="btn btn-block btn-default" href="/Testimonials#?bathRepair" target="_self">Вижте още</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

